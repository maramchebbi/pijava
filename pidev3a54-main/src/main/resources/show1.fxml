<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.shape.*?>
<?import javafx.scene.text.Font?>
<?import javafx.geometry.Insets?>

<BorderPane style="-fx-background-color: #f5f2f0;" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.ShowCollectionT">
    <!-- Style racine -->
    <stylesheets>
        <URL value="@css_files/style.css" />
    </stylesheets>

    <!-- TOP HEADER -->
    <top>
        <VBox>
            <!-- Main Header -->
            <HBox alignment="CENTER" style="-fx-background-color: #603813; -fx-padding: 15; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.2), 10, 0, 0, 3);">
                <Label style="-fx-font-size: 28; -fx-text-fill: white; -fx-font-weight: bold;">
                    <font>
                        <Font name="Segoe UI" size="28.0" />
                    </font>
                    GESTION DES COLLECTIONS
                </Label>
            </HBox>

            <!-- Navigation Bar -->
            <HBox spacing="15" alignment="CENTER_LEFT" style="-fx-background-color: white; -fx-padding: 15; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 5, 0, 0, 2);">
                <padding>
                    <Insets left="30" right="30" />
                </padding>

                <!-- Navigation Buttons -->
                <Button fx:id="collectionButton" onAction="#Textiles" text="Les Textiles"
                        style="-fx-background-color: #b29f94; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 20; -fx-padding: 8 15;">
                    <graphic>
                        <SVGPath content="M3 13h8V3H3v10zm0 8h8v-6H3v6zm10 0h8V11h-8v10zm0-18v6h8V3h-8z" style="-fx-fill: white;"/>
                    </graphic>
                </Button>



                <Region HBox.hgrow="ALWAYS" />

                <!-- Search Bar -->
                <HBox spacing="10" alignment="CENTER" style="-fx-background-color: #f5f5f5; -fx-background-radius: 20; -fx-padding: 5 15; -fx-border-color: #e0e0e0; -fx-border-radius: 20;">
                    <SVGPath content="M15.5 14h-.79l-.28-.27C15.41 12.59 16 11.11 16 9.5 16 5.91 13.09 3 9.5 3S3 5.91 3 9.5 5.91 16 9.5 16c1.61 0 3.09-.59 4.23-1.57l.27.28v.79l5 4.99L20.49 19l-4.99-5zm-6 0C7.01 14 5 11.99 5 9.5S7.01 5 9.5 5 14 7.01 14 9.5 11.99 14 9.5 14z"
                             style="-fx-fill: #9e9e9e;"/>
                    <TextField fx:id="searchField" promptText="Rechercher une collection..."
                               style="-fx-background-color: transparent; -fx-padding: 5; -fx-min-width: 250;"/>
                </HBox>


                <!-- Add Button -->
                <Button onAction="#handleAjouterCollection" text="Ajouter Collection"
                        style="-fx-background-color: #603813; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 20; -fx-padding: 8 15;">
                    <graphic>
                        <SVGPath content="M19 13h-6v6h-2v-6H5v-2h6V5h2v6h6v2z" style="-fx-fill: white;"/>
                    </graphic>
                </Button>
            </HBox>
        </VBox>
    </top>

    <!-- MAIN CONTENT CENTER -->
    <center>
        <VBox spacing="20" style="-fx-padding: 20;">
            <!-- Title Section -->
            <HBox alignment="CENTER_LEFT" style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 15; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 5, 0, 0, 2);">
                <padding>
                    <Insets left="20" right="20" />
                </padding>
                <Label text="Liste des Collections"
                       style="-fx-font-size: 26; -fx-text-fill: #603813; -fx-font-weight: bold;"/>
            </HBox>

            <!-- Table Section - ENHANCED DESIGN -->
            <StackPane style="-fx-background-color: white;
                              -fx-background-radius: 10;
                              -fx-padding: 5;
                              -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 5);">

                <TableView fx:id="tableView" style="-fx-background-radius: 10;
                                                    -fx-table-cell-border-color: transparent;
                                                    -fx-background-color: transparent;
                                                    -fx-border-color: transparent;">
                    <columns>
                        <TableColumn fx:id="nomColumn" text="Nom de la Collection"
                                     style="-fx-font-weight: bold;
                                           -fx-font-size: 14;
                                           -fx-alignment: CENTER-LEFT;
                                           -fx-padding: 10;"/>
                        <TableColumn fx:id="descriptionColumn" text="Description"
                                     style="-fx-font-weight: bold;
                                           -fx-font-size: 14;
                                           -fx-alignment: CENTER-LEFT;
                                           -fx-padding: 10;"/>
                        <TableColumn fx:id="actionColumn" text="Actions"
                                     style="-fx-font-weight: bold;
                                           -fx-font-size: 14;
                                           -fx-alignment: CENTER;
                                           -fx-padding: 10;"/>
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                    </columnResizePolicy>
                    <placeholder>
                        <Label text="Aucune collection disponible"
                               style="-fx-font-size: 14; -fx-text-fill: #757575;"/>
                    </placeholder>

                    <style>
                        -fx-background-color: transparent;
                        -fx-background-insets: 0;
                        -fx-padding: 5;

                        /* Table header styling */
                        -fx-table-header-background-color: #f0e6df;
                        -fx-table-header-border-color: #e0d6cf;

                        /* Table row styling */
                        -fx-table-cell-border-color: transparent;
                        -fx-control-inner-background: white;
                        -fx-control-inner-background-alt: #f8f5f2;

                        /* Selection colors */
                        -fx-selection-bar: #d7c3b6;
                        -fx-selection-bar-non-focused: #e9dfd8;
                    </style>
                </TableView>
            </StackPane>
        </VBox>
    </center>

    <!-- BOTTOM FOOTER -->
    <bottom>
        <HBox alignment="CENTER" style="-fx-background-color: #603813; -fx-padding: 15;">
            <Label style="-fx-font-size: 12; -fx-text-fill: white;">
                <font>
                    <Font name="Segoe UI" size="12.0" />
                </font>
                © 2023 Système de Gestion Textile - Tous droits réservés
            </Label>
        </HBox>
    </bottom>
</BorderPane>