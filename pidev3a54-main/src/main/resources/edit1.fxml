<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.shape.SVGPath?>

<BorderPane style="-fx-background-color: #f8f5f2;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.edit1">
   <!-- Style racine -->
   <stylesheets>
      <URL value="@css_files/style.css" />
   </stylesheets>

   <!-- TOP HEADER -->
   <top>
      <VBox>
         <HBox alignment="CENTER" style="-fx-background-color: #603813; -fx-padding: 15; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.2), 10, 0, 0, 3);">
            <Label style="-fx-font-size: 24; -fx-text-fill: white; -fx-font-weight: bold;">
               MODIFIER LA COLLECTION
            </Label>
         </HBox>
      </VBox>
   </top>

   <!-- MAIN CONTENT -->
   <center>
      <ScrollPane fitToWidth="true" style="-fx-background: transparent; -fx-background-color: transparent;">
         <VBox alignment="TOP_CENTER" spacing="20" style="-fx-padding: 30;">
            <!-- Main content card -->
            <VBox spacing="20" style="-fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 5); -fx-padding: 25; -fx-max-width: 500;">
               <Text fx:id="headerText" style="-fx-font-size: 24; -fx-fill: #603813; -fx-font-weight: bold;" text="Modifier la collection" />

               <!-- Form Section -->
               <VBox spacing="15" style="-fx-padding: 15;">
                  <!-- Nom -->
                  <VBox spacing="5">
                     <Label text="Nom:" style="-fx-font-weight: bold; -fx-text-fill: #666;"/>
                     <TextField fx:id="nomCField" promptText="Nom de la collection"
                                style="-fx-background-color: white; -fx-border-color: #e0e0e0; -fx-border-radius: 4; -fx-background-radius: 4; -fx-padding: 8;"/>
                  </VBox>

                  <!-- Description -->
                  <VBox spacing="5">
                     <Label text="Description:" style="-fx-font-weight: bold; -fx-text-fill: #666;"/>
                     <TextArea fx:id="descriptionCField" promptText="Description de la collection..."
                               style="-fx-background-color: white; -fx-border-color: #e0e0e0; -fx-border-radius: 4; -fx-background-radius: 4; -fx-padding: 8; -fx-pref-height: 100;"/>
                  </VBox>
               </VBox>

               <!-- Action Buttons -->
               <HBox spacing="15" alignment="CENTER_RIGHT" style="-fx-padding: 10 0;">
                  <Button onAction="#cancelChanges" text="Annuler"
                          style="-fx-background-color: #b29f94; -fx-text-fill: #333; -fx-font-weight: bold; -fx-background-radius: 20; -fx-padding: 10 20; -fx-font-size: 14;">
                     <graphic>
                        <SVGPath content="M19 6.41L17.59 5 12 10.59 6.41 5 5 6.41 10.59 12 5 17.59 6.41 19 12 13.41 17.59 19 19 17.59 13.41 12z" style="-fx-fill: #333;"/>
                     </graphic>
                  </Button>
                  <Button onAction="#saveChanges" text="Enregistrer"
                          style="-fx-background-color: #603813; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 20; -fx-padding: 10 20; -fx-font-size: 14;">
                     <graphic>
                        <SVGPath content="M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41L9 16.17z" style="-fx-fill: white;"/>
                     </graphic>
                  </Button>
               </HBox>
            </VBox>
         </VBox>
      </ScrollPane>
   </center>

   <!-- BOTTOM FOOTER -->
   <bottom>
      <HBox alignment="CENTER" style="-fx-background-color: #603813; -fx-padding: 15;">
         <Label style="-fx-font-size: 12; -fx-text-fill: white;">
            © 2023 Système de Gestion Textile - Tous droits réservés
         </Label>
      </HBox>
   </bottom>
</BorderPane>