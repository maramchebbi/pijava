<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.shape.*?>
<?import javafx.scene.text.Font?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.effect.*?>

<BorderPane style="-fx-background-color: #f5f2f0;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.detail1">
    <!-- Style racine -->
    <stylesheets>
        <URL value="@css_files/style.css" />
    </stylesheets>

    <!-- TOP HEADER -->
    <top>
        <VBox>
            <!-- Main Header -->
            <HBox alignment="CENTER" style="-fx-background-color: #603813; -fx-padding: 15; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.2), 10, 0, 0, 3);">
                <Label style="-fx-font-size: 28; -fx-text-fill: white; -fx-font-weight: bold;">
                    <font>
                        <Font name="Segoe UI" size="28.0" />
                    </font>
                    TEXTILES DE LA COLLECTION
                </Label>
            </HBox>

            <!-- Navigation & Search Bar -->
            <HBox spacing="15" alignment="CENTER_LEFT" style="-fx-background-color: white; -fx-padding: 15; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 5, 0, 0, 2);">
                <padding>
                    <Insets left="30" right="30" />
                </padding>

                <!-- Back Button -->
                <Button onAction="#handleBack" text="Retour aux collections"
                        style="-fx-background-color: #b29f94; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 20; -fx-padding: 8 15;">
                    <graphic>
                        <SVGPath content="M20 11H7.83l5.59-5.59L12 4l-8 8 8 8 1.41-1.41L7.83 13H20v-2z" style="-fx-fill: white;"/>
                    </graphic>
                </Button>

                <Region HBox.hgrow="ALWAYS" />

                <!-- Collection Title -->
                <Label fx:id="collectionTitle"
                       style="-fx-font-size: 20; -fx-text-fill: #603813; -fx-font-weight: bold;"/>

                <Region HBox.hgrow="ALWAYS" />

                <!-- Search Bar -->

                <HBox spacing="10" alignment="CENTER" style="-fx-background-color: #f5f5f5; -fx-background-radius: 20; -fx-padding: 5 15; -fx-border-color: #e0e0e0; -fx-border-radius: 20;">
                    <SVGPath content="M15.5 14h-.79l-.28-.27C15.41 12.59 16 11.11 16 9.5 16 5.91 13.09 3 9.5 3S3 5.91 3 9.5 5.91 16 9.5 16c1.61 0 3.09-.59 4.23-1.57l.27.28v.79l5 4.99L20.49 19l-4.99-5zm-6 0C7.01 14 5 11.99 5 9.5S7.01 5 9.5 5 14 7.01 14 9.5 11.99 14 9.5 14z"
                             style="-fx-fill: #9e9e9e;"/>
                    <TextField fx:id="searchField" promptText="Rechercher un textile..."
                               onAction="#handleSearch"
                               style="-fx-background-color: transparent; -fx-padding: 5; -fx-min-width: 250;"/>
                </HBox>
            </HBox>
        </VBox>
    </top>

    <!-- MAIN CONTENT CENTER -->
    <center>
        <ScrollPane fitToWidth="true" style="-fx-background: transparent; -fx-background-color: transparent;">
            <VBox alignment="TOP_CENTER" spacing="20" style="-fx-padding: 30;">
                <!-- Masonry-style Grid with Improved Design -->
                <FlowPane fx:id="imageContainer" hgap="25" vgap="25"
                          style="-fx-padding: 20; -fx-alignment: center;">

                    <!-- Template for Textile Card (will be duplicated dynamically) -->
                    <VBox styleClass="textile-card" prefWidth="280" maxWidth="280"
                          style="-fx-background-color: white;
                                 -fx-background-radius: 12;
                                 -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.15), 10, 0, 0, 4);
                                 -fx-border-radius: 12;
                                 -fx-border-color: #f0f0f0;
                                 -fx-border-width: 1;
                                 -fx-spacing: 0;">

                        <!-- Image Section -->
                        <StackPane style="-fx-background-radius: 10 10 0 0;">
                            <Rectangle arcWidth="20" arcHeight="20" width="280" height="200"
                                       style="-fx-fill: #f5f5f5; -fx-arc-width: 20; -fx-arc-height: 20;"/>
                            <ImageView fx:id="textileImage" fitWidth="280" fitHeight="200" preserveRatio="true"
                                       style="-fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 5, 0, 0, 2);">
                                <clip>
                                    <Rectangle arcWidth="20" arcHeight="20" width="280" height="200"/>
                                </clip>
                            </ImageView>
                        </StackPane>

                        <!-- Textile Info Section -->
                        <VBox spacing="5" style="-fx-padding: 15 20;">
                            <!-- Name -->
                            <Label fx:id="textileName"
                                   style="-fx-font-size: 16;
                                          -fx-font-weight: bold;
                                          -fx-text-fill: #603813;"/>

                            <!-- Description -->
                            <Label fx:id="textileDescription" wrapText="true"
                                   style="-fx-font-size: 13;
                                          -fx-text-fill: #757575;
                                          -fx-line-spacing: 1.2;"/>

                            <!-- Properties -->
                            <HBox spacing="12" style="-fx-padding: 8 0 0 0;">
                                <HBox alignment="CENTER_LEFT" spacing="5">
                                    <SVGPath content="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm0 18c-4.41 0-8-3.59-8-8s3.59-8 8-8 8 3.59 8 8-3.59 8-8 8zm4.59-12.42L10 14.17l-2.59-2.58L6 13l4 4 8-8z"
                                             style="-fx-fill: #907a6c;" scaleX="0.7" scaleY="0.7"/>
                                    <Label fx:id="textileMatiere" style="-fx-font-size: 12; -fx-text-fill: #907a6c;"/>
                                </HBox>

                                <HBox alignment="CENTER_LEFT" spacing="5">
                                    <SVGPath content="M19 3H5c-1.1 0-2 .9-2 2v14c0 1.1.9 2 2 2h14c1.1 0 2-.9 2-2V5c0-1.1-.9-2-2-2zm0 16H5V5h14v14z"
                                             style="-fx-fill: #907a6c;" scaleX="0.7" scaleY="0.7"/>
                                    <Label fx:id="textileDimension" style="-fx-font-size: 12; -fx-text-fill: #907a6c;"/>
                                </HBox>
                            </HBox>

                            <!-- Action Buttons -->
                            <HBox spacing="10" alignment="CENTER_RIGHT" style="-fx-padding: 10 0 0 0;">
                                <Button text="Modifier" onAction="#handleEdit"
                                        style="-fx-background-color: #d7c3b6;
                                               -fx-text-fill: #603813;
                                               -fx-background-radius: 15;
                                               -fx-font-size: 12;
                                               -fx-font-weight: bold;
                                               -fx-padding: 5 15;"/>

                                <Button text="Supprimer" onAction="#handleDelete"
                                        style="-fx-background-color: #c62828;
                                               -fx-text-fill: white;
                                               -fx-background-radius: 15;
                                               -fx-font-size: 12;
                                               -fx-font-weight: bold;
                                               -fx-padding: 5 15;"/>
                            </HBox>
                        </VBox>
                    </VBox>
                </FlowPane>
            </VBox>
        </ScrollPane>
    </center>

    <!-- BOTTOM FOOTER -->
    <bottom>
        <HBox alignment="CENTER" style="-fx-background-color: #603813; -fx-padding: 15;">
            <Label style="-fx-font-size: 12; -fx-text-fill: white;">
                <font>
                    <Font name="Segoe UI" size="12.0" />
                </font>
                © 2023 Système de Gestion Textile - Tous droits réservés
            </Label>
        </HBox>
    </bottom>
</BorderPane>