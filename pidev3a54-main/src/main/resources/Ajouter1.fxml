<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.*?>

<BorderPane style="-fx-background-color: #f8f5f2;" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.AjouterCollectionT">
   <stylesheets>
      <URL value="@css_files/style.css" />
   </stylesheets>

   <top>
      <HBox alignment="CENTER" style="-fx-background-color: #603813; -fx-padding: 20; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.2), 10, 0, 0, 3);">
         <Label style="-fx-font-size: 28; -fx-text-fill: white; -fx-font-weight: bold;">
            <font>
               <Font name="Segoe UI" size="28.0" />
            </font>
            AJOUTER UNE COLLECTION TEXTILE
         </Label>
      </HBox>
   </top>

   <center>
      <ScrollPane fitToWidth="true" style="-fx-background: transparent; -fx-background-color: transparent;">
         <VBox alignment="TOP_CENTER" spacing="20" style="-fx-padding: 20; -fx-background-color: #f8f5f2;">
            <!-- Conteneur principal -->
            <VBox alignment="TOP_CENTER" spacing="15"
                  style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 25; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 5);"
                  maxWidth="650" minWidth="400">

               <Label style="-fx-font-size: 20; -fx-text-fill: #603813; -fx-font-weight: bold; -fx-padding: 0 0 10 0;">
                  INFORMATIONS DE LA COLLECTION
               </Label>

               <GridPane alignment="CENTER" hgap="20" vgap="15">
                  <columnConstraints>
                     <ColumnConstraints halignment="RIGHT" minWidth="150" />
                     <ColumnConstraints halignment="LEFT" minWidth="300" />
                  </columnConstraints>

                  <!-- Nom -->
                  <Label style="-fx-font-size: 14; -fx-text-fill: #333;" text="Nom :" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                  <TextField fx:id="nomCField" promptText="Nom de la collection" style="-fx-background-radius: 5; -fx-border-color: #b29f94; -fx-border-radius: 5; -fx-padding: 8; -fx-background-color: white;" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                  <Label fx:id="nomError" style="-fx-text-fill: #c62828; -fx-font-size: 12;" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                  <!-- Description -->
                  <Label style="-fx-font-size: 14; -fx-text-fill: #333;" text="Description :" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                  <TextArea fx:id="descriptionCField" promptText="Description de la collection..." style="-fx-background-radius: 5; -fx-border-color: #b29f94; -fx-border-radius: 5; -fx-padding: 8; -fx-background-color: white;" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                  <Label fx:id="descriptionError" style="-fx-text-fill: #c62828; -fx-font-size: 12;" GridPane.columnIndex="1" GridPane.rowIndex="3" />

                  <!-- ID Utilisateur -->
                  <Label style="-fx-font-size: 14; -fx-text-fill: #333;" text="ID Utilisateur :" GridPane.columnIndex="0" GridPane.rowIndex="4" />
                  <TextField fx:id="iduserfield" promptText="ID de l'utilisateur" style="-fx-background-radius: 5; -fx-border-color: #b29f94; -fx-border-radius: 5; -fx-padding: 8; -fx-background-color: white;" GridPane.columnIndex="1" GridPane.rowIndex="4" />
                  <Label fx:id="userError" style="-fx-text-fill: #c62828; -fx-font-size: 12;" GridPane.columnIndex="1" GridPane.rowIndex="5" />
               </GridPane>

               <!-- Buttons -->
               <HBox alignment="CENTER" spacing="15" style="-fx-padding: 15 0 0 0;">
                  <Button onAction="#ViewCollectionT" style="-fx-background-color: #b29f94; -fx-text-fill: #333; -fx-font-weight: bold; -fx-background-radius: 20; -fx-padding: 8 20; -fx-cursor: hand; -fx-font-size: 14;" text="Annuler">
                     <graphic>
                        <SVGPath content="M4 11h12v2H4zm8-4h4v2h-4zm0 8h4v2h-4z" fill="#333" />
                     </graphic>
                  </Button>
                  <Button onAction="#AjouterCollectionT" style="-fx-background-color: #603813; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 20; -fx-padding: 8 20; -fx-cursor: hand; -fx-font-size: 14;" text="Confirmer">
                     <graphic>
                        <SVGPath content="M4 11h12v2H4zm8-4h4v2h-4zm0 8h4v2h-4z" fill="white" />
                     </graphic>
                  </Button>
               </HBox>
            </VBox>
         </VBox>
      </ScrollPane>
   </center>

   <bottom>
      <HBox alignment="CENTER" style="-fx-background-color: #603813; -fx-padding: 15;">
         <Label style="-fx-font-size: 12; -fx-text-fill: white;">
            <font>
               <Font name="Segoe UI" size="12.0" />
            </font>
            © 2023 Système de Gestion Textile - Tous droits réservés
         </Label>
      </HBox>
   </bottom>
</BorderPane>