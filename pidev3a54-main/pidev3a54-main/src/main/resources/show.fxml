<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.paint.LinearGradient?>
<?import javafx.scene.paint.Stop?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="650.0" prefWidth="800.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/23.0.1" fx:controller="controller.ShowOeuvres">


    <children>
        <!-- Header Text with better styling -->
        <Text fx:id="headerText" layoutX="50.0" layoutY="80.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Liste des Œuvres">
            <font>
                <Font name="System Bold" size="28.0" />
            </font>
            <fill>
                <LinearGradient endX="1.0" endY="1.0">
                    <stops>
                        <Stop color="#5e4b3c" />
                        <Stop color="#8a6d5b" offset="1.0" />
                    </stops>
                </LinearGradient>
            </fill>
            <effect>
                <DropShadow color="rgba(0,0,0,0.15)" offsetX="2.0" offsetY="2.0" radius="3.0" />
            </effect>
        </Text>

        <!-- Action Buttons with consistent styling -->
        <HBox layoutX="50.0" layoutY="90.0" spacing="10">
            <Button mnemonicParsing="false" onAction="#affichercollectionaction" prefHeight="35.0" prefWidth="186.0" style="-fx-background-color: #8a6d5b; -fx-text-fill: white; -fx-font-weight: bold;" text="Les Collections">
                <effect>
                    <DropShadow color="rgba(0,0,0,0.1)" radius="3.0" />
                </effect>
            </Button>
        </HBox>

        <!-- Main Content Area with better scroll pane -->
        <ScrollPane fx:id="scrollPane"
                    layoutX="50.0"
                    layoutY="136.0"
                    prefHeight="470.0"
                    prefWidth="700.0"
                    fitToWidth="true"
                    hbarPolicy="NEVER"
                    vbarPolicy="ALWAYS"
                    style="-fx-background: #f8f5f2; -fx-border-color: #d9d1c7; -fx-border-radius: 5; -fx-background-radius: 5;">
            <content>
                <FlowPane fx:id="imageContainer"
                          hgap="20"
                          vgap="20"
                          prefWidth="680.0"> <!-- on peut définir une largeur ici -->
                    <padding>
                        <Insets top="20" right="20" bottom="20" left="20" />
                    </padding>
                </FlowPane>
            </content>
            <effect>
                <DropShadow color="rgba(0,0,0,0.05)" offsetX="0.0" offsetY="2.0" radius="10.0" />
            </effect>
        </ScrollPane>

        <Button layoutX="590.0" layoutY="90.0" mnemonicParsing="false" onAction="#handleAjouterOeuvre" prefHeight="35.0" prefWidth="160.0" style="-fx-background-color: #5e4b3c; -fx-text-fill: white; -fx-font-weight: bold;" text="+ Ajouter Œuvre">
             <effect>
                 <DropShadow color="rgba(0,0,0,0.1)" radius="3.0" />
             </effect>
         </Button>
    </children>

    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
</AnchorPane>
