<?import javafx.scene.paint.Stop?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.text.Font?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="800.0" prefWidth="1200.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.edit">
    <top>
        <StackPane prefHeight="100.0">
            <children>
                <Rectangle height="100.0" width="1200.0">
                    <fill>
                        <LinearGradient endX="1.0" endY="1.0" startX="0.0" startY="0.0">
                            <stops>
                                <Stop color="#7d6253" />
                                <Stop color="#5e4b3c" offset="1.0" />
                            </stops>
                        </LinearGradient>
                    </fill>
                </Rectangle>
                <HBox alignment="CENTER_LEFT" spacing="20.0">
                    <padding>
                        <Insets left="40.0" right="40.0" />
                    </padding>
                    <children>
                        <Label text="MODIFIER L'ŒUVRE" textFill="WHITE">
                            <font>
                                <Font name="Calibri Bold" size="36.0" />
                            </font>
                        </Label>
                    </children>
                </HBox>
            </children>
            <effect>
                <DropShadow color="#00000066" height="10.0" radius="4.5" width="10.0" />
            </effect>
        </StackPane>
    </top>
    <center>
        <ScrollPane fitToWidth="true" hbarPolicy="NEVER" styleClass="edge-to-edge" BorderPane.alignment="CENTER">
            <content>
                <AnchorPane style="-fx-background-color: white;">
                    <children>
                        <HBox spacing="40.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                            <padding>
                                <Insets bottom="50.0" left="50.0" right="50.0" top="50.0" />
                            </padding>
                            <children>
                                <!-- Image Upload Section - LEFT SIDE -->
                                <VBox alignment="TOP_CENTER" spacing="20.0" prefWidth="500.0">
                                    <children>
                                        <Label text="Image de l'Œuvre" textFill="#5e4b3c">
                                            <font>
                                                <Font name="Calibri Bold" size="20.0" />
                                            </font>
                                        </Label>
                                        <StackPane>
                                            <children>
                                                <Rectangle arcHeight="10.0" arcWidth="10.0" fill="#f8f8f8" height="400.0" width="500.0" stroke="#d7c3af" strokeWidth="2.0">
                                                    <effect>
                                                        <DropShadow color="#00000040" height="15.0" radius="7.0" width="15.0" />
                                                    </effect>
                                                </Rectangle>
                                                <ImageView fx:id="imageView" fitHeight="380.0" fitWidth="480.0" pickOnBounds="true" preserveRatio="true" />
                                            </children>
                                        </StackPane>
                                        <Button mnemonicParsing="false" onAction="#newimageaction" prefHeight="40.0" prefWidth="200.0" styleClass="action-button" text="Choisir une image">
                                            <font>
                                                <Font name="System Bold" size="14.0" />
                                            </font>
                                        </Button>
                                    </children>
                                </VBox>

                                <!-- Form Fields Section - RIGHT SIDE -->
                                <VBox spacing="25.0" HBox.hgrow="ALWAYS">
                                    <children>
                                        <Label text="INFORMATIONS DE L'ŒUVRE" textFill="#5e4b3c">
                                            <font>
                                                <Font name="Calibri Bold" size="22.0" />
                                            </font>
                                        </Label>
                                        <Rectangle height="3.0" width="150.0" fill="#be9b7b" />

                                        <GridPane hgap="20.0" vgap="20.0">
                                            <columnConstraints>
                                                <ColumnConstraints hgrow="NEVER" minWidth="120.0" prefWidth="120.0" />
                                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="400.0" />
                                            </columnConstraints>
                                            <rowConstraints>
                                                <RowConstraints minHeight="10.0" prefHeight="40.0" vgrow="SOMETIMES" />
                                                <RowConstraints minHeight="10.0" prefHeight="40.0" vgrow="SOMETIMES" />
                                                <RowConstraints minHeight="10.0" prefHeight="40.0" vgrow="SOMETIMES" />
                                                <RowConstraints minHeight="10.0" prefHeight="40.0" vgrow="SOMETIMES" />
                                                <RowConstraints minHeight="10.0" prefHeight="40.0" vgrow="SOMETIMES" />
                                                <RowConstraints minHeight="10.0" prefHeight="40.0" vgrow="SOMETIMES" />
                                                <RowConstraints minHeight="10.0" prefHeight="40.0" vgrow="SOMETIMES" />
                                                <RowConstraints minHeight="10.0" prefHeight="40.0" vgrow="SOMETIMES" />
                                            </rowConstraints>
                                            <children>
                                                <!-- Labels -->
                                                <Label styleClass="field-label" text="Nom:" GridPane.rowIndex="0">
                                                    <font>
                                                        <Font name="Calibri Bold" size="16.0" />
                                                    </font>
                                                </Label>
                                                <Label styleClass="field-label" text="Type:" GridPane.rowIndex="1">
                                                    <font>
                                                        <Font name="Calibri Bold" size="16.0" />
                                                    </font>
                                                </Label>
                                                <Label styleClass="field-label" text="Description:" GridPane.rowIndex="2">
                                                    <font>
                                                        <Font name="Calibri Bold" size="16.0" />
                                                    </font>
                                                </Label>
                                                <Label styleClass="field-label" text="Matière:" GridPane.rowIndex="3">
                                                    <font>
                                                        <Font name="Calibri Bold" size="16.0" />
                                                    </font>
                                                </Label>
                                                <Label styleClass="field-label" text="Couleur:" GridPane.rowIndex="4">
                                                    <font>
                                                        <Font name="Calibri Bold" size="16.0" />
                                                    </font>
                                                </Label>
                                                <Label styleClass="field-label" text="Dimensions:" GridPane.rowIndex="5">
                                                    <font>
                                                        <Font name="Calibri Bold" size="16.0" />
                                                    </font>
                                                </Label>
                                                <Label styleClass="field-label" text="Catégorie:" GridPane.rowIndex="6">
                                                    <font>
                                                        <Font name="Calibri Bold" size="16.0" />
                                                    </font>
                                                </Label>
                                                <Label styleClass="field-label" text="Créateur:" GridPane.rowIndex="7">
                                                    <font>
                                                        <Font name="Calibri Bold" size="16.0" />
                                                    </font>
                                                </Label>

                                                <!-- Form Controls -->
                                                <TextField fx:id="nomField" styleClass="edit-field" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                                                <ComboBox fx:id="typeComboBox" prefHeight="40.0" prefWidth="400.0" styleClass="combo-box" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                                                <TextField fx:id="descriptionField" styleClass="edit-field" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                                                <TextField fx:id="matiereField" styleClass="edit-field" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                                                <TextField fx:id="couleurField" styleClass="edit-field" GridPane.columnIndex="1" GridPane.rowIndex="4" />
                                                <TextField fx:id="dimensionField" styleClass="edit-field" GridPane.columnIndex="1" GridPane.rowIndex="5" />
                                                <ComboBox fx:id="categorieComboBox" prefHeight="40.0" prefWidth="400.0" styleClass="combo-box" GridPane.columnIndex="1" GridPane.rowIndex="6" />
                                                <TextField fx:id="useridtextfield" styleClass="edit-field" editable="false" GridPane.columnIndex="1" GridPane.rowIndex="7" />
                                            </children>
                                        </GridPane>

                                        <!-- Buttons Section -->
                                        <HBox alignment="CENTER_RIGHT" spacing="20.0">
                                            <padding>
                                                <Insets top="30.0" />
                                            </padding>
                                            <children>
                                                <Button mnemonicParsing="false" onAction="#cancelChanges" prefHeight="45.0" prefWidth="150.0" styleClass="cancel-button" text="Annuler">
                                                    <font>
                                                        <Font name="System Bold" size="14.0" />
                                                    </font>
                                                </Button>
                                                <Button mnemonicParsing="false" onAction="#saveChanges" prefHeight="45.0" prefWidth="150.0" styleClass="save-button" text="Enregistrer">
                                                    <font>
                                                        <Font name="System Bold" size="14.0" />
                                                    </font>
                                                </Button>
                                            </children>
                                        </HBox>
                                    </children>
                                </VBox>
                            </children>
                        </HBox>
                    </children>
                </AnchorPane>
            </content>
        </ScrollPane>
    </center>
