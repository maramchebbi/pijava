<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controller.WorkshopsController"
            prefWidth="1200" prefHeight="800">

    <!-- Bandeau d'en-tÃªte avec taille fixe -->
    <VBox fx:id="headerBar"
          AnchorPane.topAnchor="0"
          AnchorPane.leftAnchor="0"
          AnchorPane.rightAnchor="0"
          minHeight="60"
          style="-fx-background-color: linear-gradient(to bottom, #8A715E, #D6C6B1); -fx-padding: 10 20;">

        <HBox alignment="CENTER_LEFT" spacing="20">
            <!-- Logo placeholder -->
            <Region prefWidth="40" prefHeight="40"
                    style="-fx-background-color: white; -fx-background-radius: 20; -fx-opacity: 0.9;" />

            <Label text="ARTISFERA"
                   style="-fx-font-size: 18; -fx-font-weight: bold; -fx-text-fill: white;" />

            <Region HBox.hgrow="ALWAYS" />

            <!-- Navigation buttons -->
            <HBox spacing="10" alignment="CENTER_RIGHT" minWidth="300">
                <Button text="Gallery"
                        onAction="#goToHome"
                        prefWidth="100"
                        style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-weight: bold;" />
                <Button text="Ajouter Workshop"
                        prefWidth="150"
                        style="-fx-background-color: white; -fx-text-fill: #8A715E; -fx-font-weight: bold; -fx-background-radius: 15;" />
                <Button text="Collections"
                        onAction="#goToCollections"
                        prefWidth="100"
                        style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-weight: bold;" />
            </HBox>
        </HBox>
    </VBox>

    <!-- Content area with explicit binding to header height -->
    <ScrollPane fx:id="contentScrollPane"
                AnchorPane.topAnchor="60"
                AnchorPane.bottomAnchor="0"
                AnchorPane.leftAnchor="0"
                AnchorPane.rightAnchor="0"
                fitToWidth="true"
                style="-fx-background: white; -fx-background-color: white; -fx-padding: 0;">

        <VBox fx:id="workshopsContainer"
              spacing="20"
              style="-fx-padding: 30 60 60 60;"
              alignment="TOP_CENTER" />
    </ScrollPane>
</AnchorPane>