<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.media.*?>
<?import javafx.scene.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controller.Workshops"
            prefHeight="400.0" prefWidth="600.0">

    <VBox fx:id="videoContainer" layoutX="20.0" layoutY="20.0" spacing="15.0" prefWidth="560.0"/>
        <!-- Exemple d'une vidéo avec un titre -->
        <HBox spacing="10.0">
            <MediaView fx:id="mediaView1" fitWidth="300" fitHeight="200"/>
            <Label text="Titre de la vidéo 1" style="-fx-font-size: 16px; -fx-font-weight: bold;" />
        </HBox>

        <HBox spacing="10.0">
            <MediaView fx:id="mediaView2" fitWidth="300" fitHeight="200"/>
            <Label text="Titre de la vidéo 2" style="-fx-font-size: 16px; -fx-font-weight: bold;" />
        </HBox>

        <!-- Tu peux ajouter dynamiquement plus de vidéos via le contrôleur -->
    </VBox>

</AnchorPane>
