<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ComboBox?>
<AnchorPane prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="Controllers.AfficherMusicController">

    <children>

        <!-- Header + buttons -->
        <VBox spacing="12" AnchorPane.topAnchor="10.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0">
            <children>
                <Text text="ðŸŽµ Liste des Musiques" style="-fx-fill: #2c3e50;">
                    <font>
                        <Font name="Arial Black" size="24.0" />
                    </font>
                </Text>

                <HBox spacing="15">
                    <children>
                        <Button fx:id="ajouterButton"
                                onAction="#handleAddMusicButton"
                                text="âž• Ajouter une musique"
                                style="-fx-background-color: #8B5E3C; -fx-text-fill: white; -fx-background-radius: 8; -fx-padding: 6 12;" />
                        <Button fx:id="lyricsButton" text="Get Lyrics" onAction="#handleGetLyrics"
                                style="-fx-background-color: #8B5E3C; -fx-text-fill: white; -fx-background-radius: 8; -fx-padding: 6 12;" />
                        <Button text="Musics" onAction="#handleRefreshRightSide"
                                style="-fx-background-color: #8B5E3C;
                   -fx-text-fill: white;
                   -fx-font-size: 14px;
                   -fx-background-radius: 8;
                   -fx-padding: 6 12;"/>

                        <!-- Champ de recherche -->
                        <TextField fx:id="searchField"
                                   promptText="Rechercher par titre ou artist..."
                                   onKeyReleased="#rechercherMusique"
                                   prefHeight="25"
                                   prefWidth="300"
                                   style="-fx-background-radius: 10;
                  -fx-padding: 5;
                  -fx-border-color: #8B5E3C;
                  -fx-border-radius: 10;
                  -fx-font-size: 14px;" />
                        <ComboBox fx:id="genreComboBox"
                                  promptText="Trier par genre..."
                                  onAction="#trierParGenre"
                                  prefHeight="25"
                                  style="-fx-background-radius: 8; -fx-padding: 6 12; -fx-border-color: #A18E78; -fx-border-radius: 10;" />
                    </children>
                </HBox>
            </children>
        </VBox>

        <!-- Scrollable content -->
        <ScrollPane fx:id="musicScrollPane"
                    fitToWidth="true"
                    fitToHeight="true"
                    AnchorPane.topAnchor="100.0"
                    AnchorPane.leftAnchor="20.0"
                    AnchorPane.rightAnchor="20.0"
                    AnchorPane.bottomAnchor="20.0"
                    style="-fx-background: #F9F5F1;">
            <content>
                <AnchorPane >
                    <GridPane fx:id="musicGrid"
                              layoutX="0.0"
                              layoutY="0.0"
                              hgap="20" vgap="20"
                              style="-fx-padding: 20;"
                              AnchorPane.leftAnchor="0.0"
                              AnchorPane.rightAnchor="0.0">
                        <columnConstraints>
                            <ColumnConstraints percentWidth="33.3" />
                            <ColumnConstraints percentWidth="33.3" />
                            <ColumnConstraints percentWidth="33.3" />
                        </columnConstraints>
                    </GridPane>
                </AnchorPane>
            </content>
        </ScrollPane>

    </children>
</AnchorPane>