<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.UpdateMusicController">

    <children>
        <Label layoutX="50" layoutY="30" style="-fx-font-size: 24;" text="Modifier la musique" />

        <Label layoutX="50" layoutY="80" text="Titre:" />
        <TextField fx:id="titreField" layoutX="150" layoutY="75" prefWidth="300" />
        <Label fx:id="titreErrorLabel" layoutX="150" layoutY="100" textFill="red" visible="false"/>

        <Label layoutX="50" layoutY="120" text="artistName:" />
        <TextField fx:id="artistField" layoutX="150" layoutY="115" prefWidth="300" />
        <Label fx:id="artistErrorLabel" layoutX="150" layoutY="140" textFill="red" visible="false"/>

        <Label layoutX="50.0" layoutY="160" text="Genre:" />
        <TextField fx:id="genreField" layoutX="150.0" layoutY="155.0" prefWidth="300" />
        <Label fx:id="genreErrorLabel" layoutX="150" layoutY="180" textFill="red" visible="false"/>

        <Label layoutX="52.0" layoutY="200.0" text="Description:" />
        <TextField fx:id="descriptionField" layoutX="150.0" layoutY="196.0" prefWidth="300" />
        <Label fx:id="descriptionErrorLabel" layoutX="150" layoutY="220" textFill="red" visible="false"/>

        <Label layoutX="50" layoutY="240" text="Chemin fichier:" />
        <TextField fx:id="cheminFichierField" layoutX="150" layoutY="235" prefWidth="300" />
        <Label fx:id="cheminErrorLabel" layoutX="150" layoutY="260" textFill="red" visible="false"/>

        <Label layoutX="50" layoutY="280" text="Photo:" />
        <TextField fx:id="photoField" layoutX="150" layoutY="275" prefWidth="300" />
        <Label fx:id="photoErrorLabel" layoutX="150" layoutY="300" textFill="red" visible="false"/>

        <Button fx:id="btnSave" layoutX="250" layoutY="330" onAction="#handleUpdateMusic" text="Enregistrer" />
    </children>
</AnchorPane>
