<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<?import javafx.geometry.Insets?>
<AnchorPane prefHeight="500.0" prefWidth="700.0" style="-fx-background-color: linear-gradient(to bottom, #e8f5e9, #ffffff);" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.AjouterStyleController">

    <children>
        <VBox layoutX="50.0" layoutY="30.0" spacing="25" prefWidth="600">
            <!-- Titre -->
            <Text text="Ajouter un Style de Peinture" style="-fx-fill: #2c3e50;">
                <font>
                    <Font name="Arial Black" size="26.0" />
                </font>
            </Text>

            <!-- Champ Type -->
            <VBox spacing="5">
                <Label text="Type de peinture" style="-fx-font-size: 14px; -fx-text-fill: #34495e;" />
                <TextField fx:id="typeTextField" promptText="Ex : Aquarelle, Huile..."
                           style="-fx-background-color: #f9f9f9; -fx-border-color: #bdc3c7; -fx-border-radius: 6; -fx-padding: 8;" />
                <Label fx:id="lbT" textFill="red" />
            </VBox>

            <!-- Champ Description -->
            <VBox spacing="5">
                <Label text="Description" style="-fx-font-size: 14px; -fx-text-fill: #34495e;" />
                <TextField fx:id="decriptionTextField" promptText="Brève description du style"
                           style="-fx-background-color: #f9f9f9; -fx-border-color: #bdc3c7; -fx-border-radius: 6; -fx-padding: 8;" />
                <Label fx:id="lbDesc" textFill="red" />
            </VBox>

            <!-- Import d’image -->
            <VBox spacing="5">
                <Label text="Tableau exemplaire" style="-fx-font-size: 14px; -fx-text-fill: #34495e;" />
                <HBox spacing="10">
                    <TextField fx:id="tableauexTextField" promptText="Chemin de l'image"
                               style="-fx-background-color: #f9f9f9; -fx-border-color: #bdc3c7; -fx-border-radius: 6; -fx-padding: 8;" />
                    <Button fx:id="parcourirBtn" text="Parcourir" onAction="#handleParcourirImage"
                            style="-fx-background-color: #2980b9; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 6;" />
                </HBox>
                <Label fx:id="lbTex" textFill="red" />
            </VBox>

            <!-- Aperçu image -->
            <VBox spacing="5">
                <Label text="Aperçu de l'image" style="-fx-font-size: 14px; -fx-text-fill: #34495e;" />
                <ImageView fx:id="imageView" fitHeight="120" fitWidth="120" preserveRatio="true"
                           style="-fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 5, 0.3, 0, 2);" />
            </VBox>

            <!-- Bouton Valider -->
            <Button fx:id="validerSButtom" text="Valider" onAction="#handleValider"
                    style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-size: 15px; -fx-font-weight: bold; -fx-background-radius: 8px; -fx-padding: 10px;">
                <VBox.margin>
                    <Insets top="20"/>
                </VBox.margin>
            </Button>
        </VBox>
    </children>
</AnchorPane>
