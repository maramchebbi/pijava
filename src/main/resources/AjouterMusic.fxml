<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="450.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.AjouterMusicController">
   <children>
      <VBox layoutX="50.0" layoutY="30.0" spacing="15.0" alignment="TOP_LEFT" style="-fx-background-color: #f0f8ff; -fx-padding: 20;">

         <!-- Titre -->
         <HBox spacing="10.0" alignment="CENTER_LEFT">
            <Label text="Titre:" prefWidth="100.0" style="-fx-font-size: 14px; -fx-text-fill: #333;" />
            <TextField fx:id="titreTextField" prefWidth="200.0"
                       style="-fx-background-color: #d6ecff; -fx-border-color: #64b5f6; -fx-border-radius: 8px; -fx-background-radius: 8px; -fx-border-width: 2px; -fx-padding: 5px;" />
         </HBox>
         <Label fx:id="titreErrorLabel" textFill="red" style="-fx-font-size: 12px;" />

         <!-- Artist Name -->
         <HBox spacing="10.0" alignment="CENTER_LEFT">
            <Label text="Artist Name:" prefWidth="100.0" style="-fx-font-size: 14px; -fx-text-fill: #333;" />
            <TextField fx:id="artistNameTextField" prefWidth="200.0"
                       style="-fx-background-color: #d6ecff; -fx-border-color: #64b5f6; -fx-border-radius: 8px; -fx-background-radius: 8px; -fx-border-width: 2px; -fx-padding: 5px;" />
         </HBox>
         <Label fx:id="artistErrorLabel" textFill="red" style="-fx-font-size: 12px;" />

         <!-- Genre -->
         <HBox spacing="10.0" alignment="CENTER_LEFT">
            <Label text="Genre:" prefWidth="100.0" style="-fx-font-size: 14px; -fx-text-fill: #333;" />
            <TextField fx:id="genreTextField" prefWidth="200.0"
                       style="-fx-background-color: #d6ecff; -fx-border-color: #64b5f6; -fx-border-radius: 8px; -fx-background-radius: 8px; -fx-border-width: 2px; -fx-padding: 5px;" />
         </HBox>
         <Label fx:id="genreErrorLabel" textFill="red" style="-fx-font-size: 12px;" />

         <!-- Description -->
         <HBox spacing="10.0" alignment="CENTER_LEFT">
            <Label text="Description:" prefWidth="100.0" style="-fx-font-size: 14px; -fx-text-fill: #333;" />
            <TextField fx:id="descriptionTextField" prefWidth="200.0"
                       style="-fx-background-color: #d6ecff; -fx-border-color: #64b5f6; -fx-border-radius: 8px; -fx-background-radius: 8px; -fx-border-width: 2px; -fx-padding: 5px;" />
         </HBox>
         <Label fx:id="descriptionErrorLabel" textFill="red" style="-fx-font-size: 12px;" />

         <!-- Chemin Fichier -->
         <HBox spacing="10.0" alignment="CENTER_LEFT">
            <Label text="Fichier:" prefWidth="100.0" style="-fx-font-size: 14px; -fx-text-fill: #333;" />
            <TextField fx:id="cheminFicherTextField" prefWidth="200.0" editable="false"
                       style="-fx-background-color: #e3f2fd; -fx-border-color: #64b5f6; -fx-border-radius: 8px; -fx-background-radius: 8px; -fx-border-width: 2px; -fx-padding: 5px;" />
            <Button fx:id="parcourirAudioButton" text="Parcourir" onAction="#handleParcourirAudio"
                    style="-fx-background-color: #64b5f6; -fx-text-fill: white; -fx-background-radius: 8px; -fx-padding: 6 15;"/>
         </HBox>
         <Label fx:id="cheminErrorLabel" textFill="red" style="-fx-font-size: 12px;" />

         <!-- Photo -->
         <HBox spacing="10.0" alignment="CENTER_LEFT">
            <Label text="Photo:" prefWidth="100.0" style="-fx-font-size: 14px; -fx-text-fill: #333;" />
            <TextField fx:id="photoTextField" prefWidth="200.0" editable="false"
                       style="-fx-background-color: #e3f2fd; -fx-border-color: #64b5f6; -fx-border-radius: 8px; -fx-background-radius: 8px; -fx-border-width: 2px; -fx-padding: 5px;" />
            <Button fx:id="parcourirButton" text="Parcourir" onAction="#handleParcourir"
                    style="-fx-background-color: #64b5f6; -fx-text-fill: white; -fx-background-radius: 8px; -fx-padding: 6 15;" />
         </HBox>
         <Label fx:id="photoErrorLabel" textFill="red" style="-fx-font-size: 12px;" />

         <!-- Valider -->
         <HBox alignment="CENTER">
            <Button fx:id="validerTextField" text="Valider" onAction="#addMusicButton"
                    style="-fx-background-color: #2196f3; -fx-text-fill: white; -fx-font-size: 14px; -fx-background-radius: 10px; -fx-padding: 8 20;" />
         </HBox>

      </VBox>
   </children>
</AnchorPane>
