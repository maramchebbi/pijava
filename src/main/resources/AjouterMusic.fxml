<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="550.0" prefWidth="600.0"
            style="-fx-background-color: transparent;"
        xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1"
        fx:controller="Controllers.AjouterMusicController">

<children>
<VBox layoutX="125.0" layoutY="30.0" alignment="TOP_CENTER" spacing="15"
      style="-fx-padding: 30 50;
                   -fx-background-color: #e8e1c6; /* Soft beige background */
                   -fx-background-radius: 18;
                   -fx-border-color: #d3c4a3; /* Light brown border */
                   -fx-border-radius: 18;
                   -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 20, 0.3, 0, 6);">

   <!-- Title -->
   <Label text="🎼 Ajouter une Musique" style="-fx-font-size: 22px; -fx-text-fill: #8B5E3C;"> <!-- Use the specified color here -->
      <font>
         <Font name="Georgia" size="22"/>
      </font>
   </Label>

   <!-- Input Group -->
   <VBox spacing="10" style="-fx-padding: 10;">

      <!-- Titre -->
      <TextField fx:id="titreTextField" promptText="Titre de la musique"
                 style="-fx-background-radius: 10; -fx-border-radius: 10; -fx-border-color: #d3c4a3;" />
      <Label fx:id="titreErrorLabel" textFill="red" />

      <!-- Artist Name -->
      <TextField fx:id="artistNameTextField" promptText="Nom de l'artiste"
                 style="-fx-background-radius: 10; -fx-border-radius: 10; -fx-border-color: #d3c4a3;" />
      <Label fx:id="artistErrorLabel" textFill="red" />

      <!-- Genre -->
      <TextField fx:id="genreTextField" promptText="Genre"
                 style="-fx-background-radius: 10; -fx-border-radius: 10; -fx-border-color: #d3c4a3;" />
      <Label fx:id="genreErrorLabel" textFill="red" />

      <!-- Description -->
      <TextField fx:id="descriptionTextField" promptText="Description"
                 style="-fx-background-radius: 10; -fx-border-radius: 10; -fx-border-color: #d3c4a3;" />
      <Label fx:id="descriptionErrorLabel" textFill="red" />

      <!-- Fichier -->
      <HBox spacing="10">
         <TextField fx:id="cheminFicherTextField" promptText="Fichier audio" editable="false"
                    style="-fx-background-radius: 10; -fx-border-radius: 10; -fx-border-color: #d3c4a3;" />
         <Button fx:id="parcourirAudioButton" text="🎵 parcourir"
                 onAction="#handleParcourirAudio"
                 style="-fx-background-color: #8B5E3C; -fx-text-fill: white; -fx-background-radius: 10;" />
      </HBox>
      <Label fx:id="cheminErrorLabel" textFill="red" />

      <!-- Photo -->
      <HBox spacing="10">
         <TextField fx:id="photoTextField" promptText="Photo" editable="false"
                    style="-fx-background-radius: 10; -fx-border-radius: 10; -fx-border-color: #d3c4a3;" />
         <Button fx:id="parcourirButton" text="🖼️ parcourir"
                 onAction="#handleParcourir"
                 style="-fx-background-color: #8B5E3C; -fx-text-fill: white; -fx-background-radius: 10;" />
      </HBox>
      <Label fx:id="photoErrorLabel" textFill="red" />
   </VBox>

   <!-- Submit -->
   <Button fx:id="validerTextField" text="Enregistrer"
           onAction="#addMusicButton"
           style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-background-radius: 10; -fx-font-size: 14px; -fx-padding: 8 20;" />

</VBox>
</children>
        </AnchorPane>
