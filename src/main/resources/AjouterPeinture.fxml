<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.geometry.Insets?>
<?import java.net.URL?>

<AnchorPane prefHeight="650.0" prefWidth="900.0" style="-fx-background-color: linear-gradient(to bottom right, #2c5877, #356d75); -fx-background-radius: 30; -fx-padding: 10;"
            xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="Controllers.AjouterPeintureController">

    <children>
        <VBox alignment="CENTER" spacing="5" AnchorPane.topAnchor="10.0"
              AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="350.0"
              AnchorPane.rightAnchor="50.0">

            <!-- Carte du formulaire -->
            <VBox fx:id="formBox" alignment="CENTER" spacing="12" style="-fx-background-color: rgba(255,255,255,0.93); -fx-background-radius: 20; -fx-padding: 25; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 15, 0.3, 4, 4);">

                <!-- En-tête du formulaire -->
                <HBox alignment="CENTER" spacing="12">
                    <StackPane style="-fx-background-color: #9575cd; -fx-background-radius: 50%; -fx-min-height: 42; -fx-min-width: 42; -fx-max-height: 42; -fx-max-width: 42; -fx-alignment: center;">
                        <Label text="🖌" style="-fx-font-size: 22px; -fx-text-fill: white;"/>
                    </StackPane>
                    <Text style="-fx-fill: #512da8; -fx-font-size: 23px; -fx-font-weight: bold;" text="Ajouter une peinture"/>
                </HBox>

                <Separator style="-fx-background-color: #9575cd; -fx-opacity: 0.6;" />

                <!-- Section Titre -->
                <VBox spacing="4">
                    <Label text="Titre de la peinture" style="-fx-text-fill: #512da8; -fx-font-weight: bold; -fx-font-size: 14px;"/>
                    <TextField fx:id="titreTextField" promptText="Saisissez le titre de l'œuvre..."
                               style="-fx-background-radius: 10; -fx-border-radius: 10; -fx-border-color: #9575cd; -fx-padding: 9; -fx-font-size: 14px; -fx-pref-width: 450px;"/>
                    <Label fx:id="lbTitre" style="-fx-font-size: 11; -fx-text-fill: #e53935;" />
                </VBox>

                <!-- Section Style -->
                <VBox spacing="4">
                    <Label text="Style artistique" style="-fx-text-fill: #512da8; -fx-font-weight: bold; -fx-font-size: 14px;"/>
                    <ComboBox fx:id="styleComboBox" promptText="Sélectionnez un style"
                              style="-fx-background-radius: 10; -fx-border-radius: 10; -fx-border-color: #9575cd; -fx-padding: 8; -fx-font-size: 14px; -fx-pref-width: 450px;"/>
                    <Label fx:id="lbStyle" style="-fx-font-size: 11; -fx-text-fill: #e53935;" />
                </VBox>

                <!-- Section Date de création -->
                <VBox spacing="4">
                    <Label text="Date de création" style="-fx-text-fill: #512da8; -fx-font-weight: bold; -fx-font-size: 14px;"/>
                    <DatePicker fx:id="dateDeCreationTextField" promptText="Sélectionnez une date"
                                style="-fx-background-radius: 10; -fx-border-radius: 10; -fx-border-color: #9575cd; -fx-padding: 8; -fx-font-size: 14px; -fx-pref-width: 450px;"/>
                    <Label fx:id="lbDcr" style="-fx-font-size: 11; -fx-text-fill: #e53935;" />
                </VBox>

                <!-- Section Image -->
                <VBox spacing="4">
                    <Label text="Image de l'œuvre" style="-fx-text-fill: #512da8; -fx-font-weight: bold; -fx-font-size: 14px;"/>
                    <HBox alignment="CENTER_LEFT" spacing="10">
                        <TextField fx:id="tableauTextField" promptText="Chemin de l'image..."
                                   style="-fx-background-radius: 10; -fx-border-radius: 10; -fx-border-color: #9575cd; -fx-padding: 9; -fx-font-size: 14px;" HBox.hgrow="ALWAYS"/>
                        <Button fx:id="parcourirBtn" onAction="#handleParcourirImage"
                                style="-fx-background-color: #7e57c2; -fx-background-radius: 10; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 9 18;" text="📁"/>
                    </HBox>
                    <Label fx:id="lbTab" style="-fx-font-size: 11; -fx-text-fill: #e53935;" />
                </VBox>

                <!-- Prévisualisation de l'image -->
                <VBox spacing="4" alignment="CENTER">
                    <Label text="Prévisualisation" style="-fx-text-fill: #512da8; -fx-font-weight: bold; -fx-font-size: 14px;"/>
                    <StackPane style="-fx-background-color: #f5f5f5; -fx-border-color: #9575cd; -fx-border-radius: 10; -fx-background-radius: 10; -fx-padding: 10; -fx-min-height: 120; -fx-pref-height: 120; -fx-min-width: 220;">
                        <ImageView fx:id="imageView" fitHeight="100.0" fitWidth="200.0"
                                   preserveRatio="true" style="-fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 5, 0.1, 0, 1);"/>
                    </StackPane>
                </VBox>

                <!-- Actions -->
                <HBox alignment="CENTER" spacing="15" style="-fx-padding: 15 0 5 0;">
                    <Button fx:id="validerButton" onAction="#handleValider"
                            style="-fx-background-color: #43a047; -fx-background-radius: 12; -fx-text-fill: white; -fx-font-size: 15px; -fx-font-weight: bold; -fx-padding: 10 25; -fx-min-width: 180;" text="✅ Valider"/>
                </HBox>

                <!-- Message de validation -->
                <StackPane style="-fx-padding: 5 0 0 0; -fx-min-height: 30;">
                    <Label fx:id="messageLabel" style="-fx-text-fill: #43a047; -fx-font-size: 14px; -fx-font-weight: bold;" visible="false"/>
                </StackPane>
            </VBox>
        </VBox>
    </children>
</AnchorPane>