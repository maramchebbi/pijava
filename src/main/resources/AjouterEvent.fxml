<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" style="-fx-background-color: linear-gradient(to bottom, #ffecd2, #f7d9cf);" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.AjouterEvent">
   <effect>
      <DropShadow radius="15" color="#c7b198"/>
   </effect>
   <children>
      <VBox alignment="CENTER" spacing="12.0" layoutX="200.0" layoutY="30.0" prefWidth="400" style="-fx-background-color: rgba(255,255,255,0.85); -fx-background-radius: 20; -fx-padding: 20;">
         <Label text="✨ Ajouter un Événement ✨" style="-fx-font-size: 22px; -fx-text-fill: #333; -fx-font-family: 'Segoe UI Semibold';" />

         <Label text="Titre :" style="-fx-font-weight: bold; -fx-font-size: 14px;" />
         <TextField fx:id="EventTitre" prefWidth="300.0" />
         <Label fx:id="errorTitre" textFill="red" />

         <Label text="Localisation :" style="-fx-font-weight: bold; -fx-font-size: 14px;" />
         <TextField fx:id="EventLocalisation" prefWidth="300.0" />
         <Label fx:id="errorLocalisation" textFill="red" />

         <Label text="Date :" style="-fx-font-weight: bold; -fx-font-size: 14px;" />
         <DatePicker fx:id="EventDate" prefWidth="300.0" />
         <Label fx:id="errorDate" textFill="red" />

         <Label text="Heure (HH:mm:ss) :" style="-fx-font-weight: bold; -fx-font-size: 14px;" />
         <TextField fx:id="EventHeure" prefWidth="300.0" />
         <Label fx:id="errorHeure" textFill="red" />

         <Label text="Nombre de Participants :" style="-fx-font-weight: bold; -fx-font-size: 14px;" />
         <TextField fx:id="EventNbParticipants" prefWidth="300.0" />
         <Label fx:id="errorNbParticipants" textFill="red" />

         <Label text="Image :" style="-fx-font-weight: bold; -fx-font-size: 14px;" />
         <HBox spacing="10" alignment="CENTER">
            <TextField fx:id="EventImage" prefWidth="200.0" editable="false" />
            <Button fx:id="parcourirButton" text="Parcourir" onAction="#handleParcourir"
                    style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-background-radius: 12px; -fx-font-size: 13px;" />
         </HBox>

         <Label text="Sponsor :" style="-fx-font-weight: bold; -fx-font-size: 14px;" />
         <ComboBox fx:id="sponsorComboBox" prefWidth="300.0" promptText="Sélectionnez un sponsor" />
         <Label fx:id="errorSponsor" textFill="red" />

         <Button text="Valider l'Événement" onAction="#ajouterEvent"
                 style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 15px; -fx-font-weight: bold; -fx-background-radius: 20px; -fx-padding: 10 30;" />
      </VBox>
   </children>
</AnchorPane>
