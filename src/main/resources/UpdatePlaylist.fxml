<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.UpdatePlaylistController">

    <!-- Title -->
    <Label layoutX="50" layoutY="30" style="-fx-font-size: 24;" text="Modifier la Playlist" />

    <!-- Playlist Name -->
    <Label layoutX="50" layoutY="80" text="Titre Playlist:" />
    <TextField fx:id="titreField" layoutX="150" layoutY="75" prefWidth="300" />
    <Label fx:id="titreErrorLabel" layoutX="150" layoutY="100" textFill="red" visible="false"/>

    <!-- Description -->
    <Label layoutX="50.0" layoutY="120.0" text="Description:" />
    <TextField fx:id="descriptionField" layoutX="150.0" layoutY="115.0" prefWidth="300" />
    <Label fx:id="descriptionErrorLabel" layoutX="150" layoutY="140" textFill="red" visible="false"/>

    <!-- Save Button -->
    <Button fx:id="btnSave" layoutX="250" layoutY="200" onAction="#handleUpdatePlaylist" text="Enregistrer" />
</AnchorPane>
