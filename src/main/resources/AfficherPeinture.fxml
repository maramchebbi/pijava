<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.collections.FXCollections?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="800.0" prefWidth="1247.0" style="-fx-background-color: linear-gradient(to bottom right, #2c5877, #356d75); -fx-background-radius: 30; -fx-padding: 20;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.AfficherPeintureController">

    <children>

        <!-- Conteneur principal -->
        <VBox layoutX="50.0" layoutY="30.0" prefWidth="1150" spacing="25">

            <!-- Titre -->
            <HBox alignment="CENTER_LEFT">
                <children>
                    <Text fx:id="titreText" style="-fx-fill: #ffffff; -fx-font-weight: bold; -fx-effect: dropshadow(gaussian, black, 2, 0.2, 1, 1);" text="🖼 Liste des peintures">
                        <font>
                            <Font size="28.0" />
                        </font>
                    </Text>
                </children>
            </HBox>

            <!-- Carte contenant Recherche + Grid -->
            <VBox prefHeight="646.0" prefWidth="1150.0" spacing="20" style="-fx-background-color: rgba(255,255,255,0.93);                          -fx-background-radius: 20;                          -fx-padding: 25;                          -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 15, 0.3, 4, 4);">

                <!-- Barre de recherche + Filtres dans le même HBox -->
                <HBox alignment="CENTER_LEFT" spacing="20">
                    <children>

                        <!-- Barre de recherche -->
                        <TextField fx:id="searchField" prefWidth="350" promptText="🔍 Rechercher par titre..." style="-fx-background-radius: 12;                                           -fx-border-radius: 12;                                           -fx-border-color: #9575cd;                                           -fx-padding: 10;                                           -fx-font-size: 14px;" />

                        <!-- Espacement flexible pour pousser les filtres à droite -->
                        <Region HBox.hgrow="ALWAYS" />

                        <!-- Filtres alignés à droite -->
                        <HBox alignment="CENTER_RIGHT" spacing="20">

                            <!-- Filtre par Style -->
                            <VBox spacing="5">
                                <children>
                                    <Text style="-fx-fill: #2c3e50; -fx-font-weight: bold;" text="🎨 Style :" />
                                    <ComboBox fx:id="styleComboBox" prefWidth="160" promptText="Choisir un style" style="-fx-background-radius: 10; -fx-border-radius: 10; -fx-border-color: #9575cd; -fx-padding: 8;" />
                                </children>
                            </VBox>

                            <!-- Filtre par Étoiles -->
                            <VBox spacing="5">
                                <children>
                                    <Text style="-fx-fill: #2c3e50; -fx-font-weight: bold;" text="⭐ Note :" />
                                    <ComboBox fx:id="starsComboBox" prefWidth="130" promptText="Choisir note" style="-fx-background-radius: 10; -fx-border-radius: 10; -fx-border-color: #9575cd; -fx-padding: 8;">
                                        <items>
                                            <FXCollections fx:factory="observableArrayList">
                                                <String fx:value="Toutes" />
                                                <String fx:value="★★★★★" />
                                                <String fx:value="★★★★" />
                                                <String fx:value="★★★" />
                                                <String fx:value="★★" />
                                                <String fx:value="★" />
                                            </FXCollections>
                                        </items>
                                    </ComboBox>
                                </children>
                            </VBox>

                            <!-- Tri ascendant / descendant -->
                            <VBox spacing="5">
                                <children>
                                    <Text style="-fx-fill: #2c3e50; -fx-font-weight: bold;" text="🧹 Tri : (selon la date)" />
                                    <ComboBox fx:id="triComboBox" prefWidth="150" promptText="Trier" style="-fx-background-radius: 10; -fx-border-radius: 10; -fx-border-color: #9575cd; -fx-padding: 8;">
                                        <items>
                                            <FXCollections fx:factory="observableArrayList">
                                                <String fx:value="Aucun tri" />
                                                <String fx:value="Date ↑ " />
                                                <String fx:value="Date ↓ " />
                                            </FXCollections>
                                        </items>
                                    </ComboBox>
                                </children>
                            </VBox>

                        </HBox>

                    </children>
                </HBox>

                <!-- ScrollPane contenant la grille -->
                <ScrollPane fx:id="scrollPane" fitToWidth="true" prefHeight="550.0" style="-fx-background-color: transparent;">
                    <content>
                        <GridPane fx:id="affichageGrid" alignment="TOP_CENTER" hgap="25" style="-fx-padding: 20;" vgap="25">
                            <columnConstraints>
                                <ColumnConstraints hgrow="ALWAYS" percentWidth="33.3" />
                                <ColumnConstraints hgrow="ALWAYS" percentWidth="33.3" />
                                <ColumnConstraints hgrow="ALWAYS" percentWidth="33.3" />
                            </columnConstraints>
                        </GridPane>
                    </content>
                </ScrollPane>

            </VBox>

        </VBox>

    </children>
</AnchorPane>
