<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="800.0" prefWidth="1247.0" style="-fx-background-color: linear-gradient(to bottom right, #2c5877, #356d75); -fx-background-radius: 30; -fx-padding: 20;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.ChatbotController">

    <VBox layoutX="50.0" layoutY="30.0" prefWidth="1150" spacing="25">

        <!-- Titre du Chatbot -->
        <HBox alignment="CENTER_LEFT">
            <children>
                <Text style="-fx-fill: #ffffff; -fx-font-weight: bold; -fx-font-size: 28px; -fx-effect: dropshadow(gaussian, black, 2, 0.2, 1, 1);">
                    ‚òÅ Chatbot
                </Text>
            </children>
        </HBox>

        <!-- Carte contenant la conversation -->
        <VBox prefHeight="621.0" prefWidth="1150.0" spacing="20" style="-fx-background-color: rgba(255,255,255,0.93);                      -fx-background-radius: 20;                      -fx-padding: 25;                      -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 15, 0.3, 4, 4);">

            <!-- Avatars en haut -->
            <HBox alignment="CENTER" spacing="10">
                <children>
                    <ImageView fx:id="userAvatar" fitHeight="50" fitWidth="50" />
                    <ImageView fx:id="botAvatar" fitHeight="50" fitWidth="50" />
                </children>
            </HBox>

            <!-- Zone de chat -->
            <ScrollPane fx:id="chatScrollPane" fitToWidth="true" prefHeight="500.0" style="-fx-background-color: transparent;">
                <content>
                    <VBox fx:id="chatArea" spacing="10">
                        <padding>
                            <Insets bottom="10" left="10" right="10" top="10" />
                        </padding>
                    </VBox>
                </content>
            </ScrollPane>

            <!-- Zone d'√©criture -->
            <HBox spacing="10">
                <TextField fx:id="inputField" promptText="üí¨ √âcris un message..." style="-fx-background-radius: 12;                                   -fx-border-radius: 12;                                   -fx-border-color: #9575cd;                                   -fx-padding: 10;                                   -fx-font-size: 14px;" HBox.hgrow="ALWAYS" />
                <Button onAction="#handleSendMessage" style="-fx-background-radius: 12;                                -fx-background-color: #4fc3f7;                                -fx-text-fill: white;                                -fx-font-weight: bold;                                -fx-font-size: 14px;                                -fx-padding: 10 20;" text="Envoyer" />
            </HBox>

        </VBox>

    </VBox>

</AnchorPane>
