<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane style="-fx-background-color: #e6f0ff;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.ChatbotController">

    <!-- Fond animé avec nuages -->
    <AnchorPane fx:id="chatContainer" prefHeight="600" prefWidth="670.0">
        <!-- Avatar de l'utilisateur -->
        <ImageView fx:id="userAvatar" fitHeight="50" fitWidth="50" layoutX="20" layoutY="20" />
        <!-- Avatar du chatbot -->
        <ImageView fx:id="botAvatar" fitHeight="50" fitWidth="50" layoutX="530" layoutY="20" />

        <VBox layoutX="20.0" layoutY="20.0" prefHeight="518.0" prefWidth="640.0" spacing="10">
            <ScrollPane fx:id="chatScrollPane" fitToWidth="true" prefHeight="418.0" prefWidth="546.0" style="-fx-background: transparent;">
                <VBox fx:id="chatArea" spacing="10">
                    <padding>
                        <Insets bottom="10" left="10" right="10" top="10" />
                    </padding>
                </VBox>

            </ScrollPane>

            <HBox spacing="10">
                <TextField fx:id="inputField" promptText="Écris un message..." style="-fx-background-radius: 20; -fx-background-color: white; -fx-padding: 8 12; -fx-font-size: 14px;" HBox.hgrow="ALWAYS" />
                <Button onAction="#handleSendMessage" style="-fx-background-radius: 20; -fx-background-color: #4fc3f7; -fx-text-fill: white; -fx-font-size: 14px;" text="Envoyer" />
            </HBox>
        </VBox>
    </AnchorPane>
</AnchorPane>
