<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="453.0" prefWidth="494.0" style="-fx-padding: 40; -fx-background-color: #f0f0f0; -fx-border-radius: 10; -fx-background-radius: 10;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.LoginController">

    <!-- Titre -->
    <Text style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2193b0;" text="Bienvenue sur Artisfera" AnchorPane.leftAnchor="50" AnchorPane.topAnchor="40" />

    <!-- Champ Email -->
    <TextField fx:id="emailField" promptText="Email" style="-fx-pref-width: 300; -fx-font-size: 14px; -fx-padding: 10px; -fx-background-color: #ffffff;                       -fx-border-color: #6dd5ed; -fx-border-radius: 5px;                       -fx-focus-color: #2193b0; -fx-hover-color: #6dd5ed;" AnchorPane.leftAnchor="50" AnchorPane.topAnchor="100">
        <effect>
            <DropShadow color="#2193b0" offsetX="2" offsetY="2" radius="10" />
        </effect>
    </TextField>

    <!-- Champ Mot de passe (masqué) -->
    <PasswordField fx:id="passwordField" promptText="Mot de passe" style="-fx-pref-width: 300; -fx-font-size: 14px; -fx-padding: 10px; -fx-background-color: #ffffff;                           -fx-border-color: #6dd5ed; -fx-border-radius: 5px;                           -fx-focus-color: #2193b0; -fx-hover-color: #6dd5ed;" AnchorPane.leftAnchor="50" AnchorPane.topAnchor="160">
        <effect>
            <DropShadow color="#2193b0" offsetX="2" offsetY="2" radius="10" />
        </effect>
    </PasswordField>

    <!-- Champ Mot de passe (visible) -->
    <TextField fx:id="visiblePasswordField" managed="false" promptText="Mot de passe" style="-fx-pref-width: 300; -fx-font-size: 14px; -fx-padding: 10px; -fx-background-color: #ffffff;                       -fx-border-color: #6dd5ed; -fx-border-radius: 5px;                       -fx-focus-color: #2193b0; -fx-hover-color: #6dd5ed;" visible="false" AnchorPane.leftAnchor="50" AnchorPane.topAnchor="160" />

    <!-- Bouton de visibilité du mot de passe -->
    <Button fx:id="toggleVisibilityBtn" onAction="#togglePasswordVisibility" style="-fx-background-color: transparent; -fx-font-size: 16px; -fx-cursor: hand;                    -fx-border-radius: 5px; -fx-padding: 10px;" text="👁" AnchorPane.leftAnchor="310.0" AnchorPane.topAnchor="159.0">
        <effect>
            <DropShadow color="#2193b0" offsetX="0" offsetY="2" radius="5" />
        </effect>
    </Button>

    <!-- Bouton Se connecter -->
    <Button layoutX="50.0" layoutY="242.0" onAction="#handleLogin" style="-fx-pref-width: 300; -fx-font-size: 16px; -fx-font-weight: bold;                    -fx-background-color: linear-gradient(to right, #2193b0, #6dd5ed);                    -fx-text-fill: white; -fx-padding: 12px; -fx-border-radius: 5px; -fx-cursor: hand;" text="Se connecter" AnchorPane.leftAnchor="50.0" AnchorPane.topAnchor="242.0">
        <effect>
            <DropShadow color="#2193b0" offsetX="0" offsetY="2" radius="10" />
        </effect>
    </Button>

    <!-- Message d'erreur -->
    <Label fx:id="errorLabel" layoutX="107.0" layoutY="363.0" prefHeight="20.0" prefWidth="326.0" style="-fx-font-size: 14px; -fx-font-weight: bold;" text="" textFill="red" AnchorPane.leftAnchor="107.0" AnchorPane.topAnchor="363.0" />

    <!-- Lien Inscription -->
    <Hyperlink fx:id="registerLink" onAction="#handleRegisterLinkAction" style="-fx-text-fill: #2193b0; -fx-font-size: 14px;" text="Créer un compte" AnchorPane.leftAnchor="146.0" AnchorPane.topAnchor="320.0" />
    <Hyperlink fx:id="forgotPasswordLink" onAction="#handleForgotPasswordLink" text="Mot de passe oublié ?" />

</AnchorPane>
