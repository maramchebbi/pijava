<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="controllers.ModifierReclamationController"
            style="-fx-background-color: linear-gradient(to bottom right, #f5f7fa, #e8edf2);"
            prefWidth="600" prefHeight="650">

    <!-- Header Section - Inchangé -->
    <top>
        <StackPane style="-fx-background-color: #3498db; -fx-padding: 20 30;">
            <effect>
                <DropShadow color="rgba(0,0,0,0.2)" height="10" radius="5" width="10" />
            </effect>
            <children>
                <HBox alignment="CENTER_LEFT" spacing="15">
                    <children>
                        <!-- Back button -->
                        <StackPane styleClass="icon-button">
                            <children>
                                <Circle radius="20" style="-fx-fill: rgba(255,255,255,0.2);" />
                                <Button fx:id="backButton" onAction="#handleBack"
                                        style="-fx-background-color: transparent; -fx-min-width: 40; -fx-min-height: 40; -fx-cursor: hand;">
                                    <graphic>
                                        <Text style="-fx-fill: white; -fx-font-weight: bold;" text="←">
                                            <font>
                                                <Font size="18.0" />
                                            </font>
                                        </Text>
                                    </graphic>
                                </Button>
                            </children>
                        </StackPane>
                        <!-- Title -->
                        <Text style="-fx-fill: white; -fx-font-weight: bold;" text="Modifier votre réclamation">
                            <font>
                                <Font size="22.0" />
                            </font>
                        </Text>
                    </children>
                </HBox>
            </children>
        </StackPane>
    </top>

    <!-- Main Content Section - Plus d'espace pour la description -->
    <center>
        <StackPane style="-fx-padding: 0 30 20 30;">
            <children>
                <VBox style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 30;"
                      spacing="20" alignment="TOP_CENTER" maxWidth="500">
                    <effect>
                        <DropShadow color="rgba(0,0,0,0.1)" height="20" radius="10" width="20" />
                    </effect>

                    <!-- Titre et icône plus compacts -->
                    <HBox alignment="CENTER" spacing="15" style="-fx-padding: 0 0 10 0;">
                        <children>
                            <StackPane>
                                <children>
                                    <Circle radius="30" style="-fx-fill: #f4f6f8;" />
                                    <ImageView fitHeight="35" fitWidth="35" preserveRatio="true">
                                        <image>
                                            <Image url="@image/edit_claim.png" />
                                        </image>
                                    </ImageView>
                                </children>
                            </StackPane>
                            <Text style="-fx-fill: #2c3e50; -fx-font-weight: bold;" text="Formulaire de modification">
                                <font>
                                    <Font size="18.0" />
                                </font>
                            </Text>
                        </children>
                    </HBox>

                    <!-- Claim type selection - Légèrement compacté -->
                    <VBox spacing="8">
                        <children>
                            <Label text="Type de réclamation" style="-fx-text-fill: #7f8c8d; -fx-font-weight: bold;">
                                <font>
                                    <Font size="14.0" />
                                </font>
                            </Label>
                            <ComboBox fx:id="optionCombo" promptText="Choisir une option"
                                      style="-fx-background-color: #f8f9fa; -fx-background-radius: 5; -fx-border-color: #e9ecef; -fx-border-radius: 5; -fx-border-width: 1; -fx-padding: 8;"
                                      prefWidth="440" prefHeight="45" />
                        </children>
                    </VBox>

                    <!-- Claim description - PLUS GRAND -->
                    <VBox spacing="8" VBox.vgrow="ALWAYS">
                        <children>
                            <Label text="Description détaillée" style="-fx-text-fill: #7f8c8d; -fx-font-weight: bold;">
                                <font>
                                    <Font size="14.0" />
                                </font>
                            </Label>
                            <TextArea fx:id="descriptionArea" promptText="Décrivez votre problème en détail..."
                                      wrapText="true"
                                      style="-fx-background-color: #f8f9fa; -fx-background-radius: 5; -fx-border-color: #e9ecef; -fx-border-radius: 5; -fx-border-width: 1; -fx-padding: 8; -fx-font-size: 14px;"
                                      prefWidth="440" prefHeight="250" VBox.vgrow="ALWAYS" />
                        </children>
                    </VBox>

                    <!-- Action buttons -->
                    <HBox spacing="15" alignment="CENTER">
                        <children>
                            <Button text="Annuler" onAction="#handleCancel"
                                    style="-fx-background-color: #e9ecef; -fx-text-fill: #495057; -fx-background-radius: 5; -fx-padding: 10 25; -fx-cursor: hand; -fx-font-weight: bold;"
                                    prefWidth="150" prefHeight="45" />

                            <Button text="Enregistrer" onAction="#handleModifierReclamation"
                                    style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-background-radius: 5; -fx-padding: 10 25; -fx-cursor: hand; -fx-font-weight: bold; -fx-effect: dropshadow(gaussian, rgba(52,152,219,0.3), 8, 0, 0, 2);"
                                    prefWidth="150" prefHeight="45" />
                        </children>
                    </HBox>

                    <!-- Status message -->
                    <StackPane>
                        <children>
                            <HBox fx:id="successMessage" alignment="CENTER" spacing="10" visible="false"
                                  style="-fx-background-color: rgba(46,204,113,0.1); -fx-background-radius: 5; -fx-padding: 10; -fx-border-color: #2ecc71; -fx-border-radius: 5; -fx-border-width: 1;">
                                <children>
                                    <Circle radius="8" style="-fx-fill: #2ecc71;" />
                                    <Label text="Modifications enregistrées avec succès" style="-fx-text-fill: #2ecc71;" />
                                </children>
                            </HBox>

                            <HBox fx:id="errorMessage" alignment="CENTER" spacing="10" visible="false"
                                  style="-fx-background-color: rgba(231,76,60,0.1); -fx-background-radius: 5; -fx-padding: 10; -fx-border-color: #e74c3c; -fx-border-radius: 5; -fx-border-width: 1;">
                                <children>
                                    <Circle radius="8" style="-fx-fill: #e74c3c;" />
                                    <Label fx:id="statusLabel" text="Veuillez remplir tous les champs requis" style="-fx-text-fill: #e74c3c;" />
                                </children>
                            </HBox>
                        </children>
                    </StackPane>
                </VBox>
            </children>
        </StackPane>
    </center>

    <!-- Footer - Inchangé -->
    <bottom>
        <HBox alignment="CENTER" style="-fx-padding: 0 0 15 0;">
            <children>
                <Text style="-fx-fill: #95a5a6;" text="© 2025 Système de Gestion des Réclamations - Tous droits réservés">
                    <font>
                        <Font size="12.0" />
                    </font>
                </Text>
            </children>
        </HBox>
    </bottom>
</BorderPane>