<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="500" prefWidth="650" style="-fx-background-color: #f8fafc;" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/23.0.1" fx:controller="controllers.AjouterReclamationController">

    <!-- Form Container -->
    <VBox layoutY="70" spacing="20" style="-fx-padding: 25;" AnchorPane.leftAnchor="25" AnchorPane.rightAnchor="25">
        <!-- Form Card -->
        <VBox style="-fx-background-color: white; -fx-background-radius: 8; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.05), 5, 0, 0, 2); -fx-padding: 25;">
            <VBox spacing="25">
                <!-- Catégorie Field -->
                <VBox prefHeight="26.0" prefWidth="502.0" spacing="5">
                    <Label style="-fx-text-fill: #64748b; -fx-font-size: 12; -fx-font-weight: bold;" text="CATÉGORIE" />
                    <ComboBox fx:id="optionCombo" prefHeight="23.0" prefWidth="254.0" style="-fx-background-radius: 4; -fx-padding: 8 12; -fx-font-size: 14;">
                        <padding>
                            <Insets left="10" />
                        </padding>
                    </ComboBox>
                </VBox>

                <!-- Description Field -->
                <VBox spacing="5">
                    <Label style="-fx-text-fill: #64748b; -fx-font-size: 12; -fx-font-weight: bold;" text="DESCRIPTION" />
                    <TextArea fx:id="descriptionArea" prefHeight="150" style="-fx-background-radius: 4; -fx-padding: 12; -fx-font-size: 14; -fx-border-color: #e2e8f0;" wrapText="true" />
                </VBox>

                </VBox>
        </VBox>

        <!-- Action Buttons -->
        <HBox alignment="CENTER_RIGHT" spacing="15">
            <Button onAction="#handleRetour" style="-fx-background-color: transparent; -fx-text-fill: #64748b; -fx-border-color: #cbd5e1; -fx-border-radius: 4; -fx-padding: 10 20; -fx-cursor: hand;" text="Annuler" />

            <Button onAction="#handleAjouterReclamation" style="-fx-background-color: #3b82f6; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 4; -fx-padding: 10 25; -fx-cursor: hand;" text="Envoyer la réclamation" />
        </HBox>

        <!-- Status Message -->
        <Label fx:id="statusLabel" alignment="CENTER" maxWidth="Infinity" style="-fx-text-fill: #ef4444; -fx-font-size: 13;" />
    </VBox>
</AnchorPane>
