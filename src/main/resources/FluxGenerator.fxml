<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="Controllers.FluxGeneratorController"
      spacing="10" alignment="CENTER" style="-fx-padding: 20;">

    <Label text="Générateur d'Image avec Flux AI"/>
    <TextField fx:id="promptField" promptText="Écrivez votre prompt ici..." />
    <Button fx:id="generateButton" text="Générer l'Image" onAction="#generateImage"/>
    <ImageView fx:id="imageView" fitWidth="300" preserveRatio="true"/>
    <Label fx:id="statusLabel" text="" />

</VBox>
