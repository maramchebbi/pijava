<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/16"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="controllers.TranslationController"
      spacing="20"
      style="-fx-background-color: #f0f4f8;"
      padding="30">

    <Label text="Traducteur intégré"
           style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>

    <HBox spacing="20">
        <!-- Colonne source -->
        <VBox spacing="10" style="-fx-background-color: white; -fx-padding: 15; -fx-background-radius: 10;">
            <Label text="Texte original:" style="-fx-font-weight: bold;"/>
            <TextArea fx:id="sourceTextArea"
                      prefWidth="300"
                      prefHeight="200"
                      style="-fx-font-size: 14px;"/>
        </VBox>

        <!-- Contrôles -->
        <VBox spacing="15" alignment="CENTER">
            <ComboBox fx:id="languageCombo"
                      prefWidth="150"
                      style="-fx-font-size: 14px;"/>

            <Button text="Traduire →"
                    onAction="#handleTranslate"
                    style="-fx-background-color: #4285f4; -fx-text-fill: white; -fx-font-size: 14px;
                           -fx-padding: 8 15; -fx-background-radius: 5;"/>
        </VBox>

        <!-- Colonne résultat -->
        <VBox spacing="10" style="-fx-background-color: white; -fx-padding: 15; -fx-background-radius: 10;">
            <Label text="Traduction:" style="-fx-font-weight: bold;"/>
            <TextArea fx:id="translatedTextArea"
                      prefWidth="300"
                      prefHeight="200"
                      editable="false"
                      style="-fx-font-size: 14px;"/>
        </VBox>
    </HBox>
</VBox>