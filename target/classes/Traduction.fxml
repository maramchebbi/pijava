<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="controllers.TraductionController"
            prefWidth="500" prefHeight="400"
            style="-fx-background-color: #ecf0f1; -fx-padding: 20;">
    <children>

        <Label text="Texte à traduire:" layoutX="30" layoutY="20"/>
        <TextArea fx:id="inputText" layoutX="30" layoutY="50" prefWidth="440" prefHeight="100"/>

        <Label text="Langue source (ex: en):" layoutX="30" layoutY="160"/>
        <TextField fx:id="sourceLang" layoutX="200" layoutY="155" prefWidth="80"/>

        <Label text="Langue cible (ex: fr):" layoutX="30" layoutY="200"/>
        <TextField fx:id="targetLang" layoutX="200" layoutY="195" prefWidth="80"/>

        <Button text="Traduire" layoutX="200" layoutY="240" onAction="#handleTranslate"/>

        <Label text="Résultat :" layoutX="30" layoutY="280"/>
        <TextArea fx:id="translatedText" layoutX="30" layoutY="310" prefWidth="440" prefHeight="70" editable="false"/>

    </children>
</AnchorPane>
