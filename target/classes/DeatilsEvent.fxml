<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.effect.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.image.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="Controllers.DetailsEvent"
            style="-fx-background-color: linear-gradient(to bottom right, #5D6D7E, #F5F5F5);"
            prefWidth="800" prefHeight="600"
            AnchorPane.topAnchor="0.0" AnchorPane.bottomAnchor="0.0"
            AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">

    <!-- Conteneur principal qui s'adapte à la taille de la fenêtre -->
    <VBox spacing="15" AnchorPane.topAnchor="0.0" AnchorPane.bottomAnchor="0.0"
          AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" styleClass="main-container">

        <!-- En-tête avec titre -->
        <HBox styleClass="header-container" alignment="CENTER" style="-fx-background-color: #FFFFFF; -fx-padding: 15px; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.2), 10, 0, 0, 3);">
            <VBox alignment="CENTER" HBox.hgrow="ALWAYS">
                <HBox alignment="CENTER" spacing="15">
                    <ImageView fitWidth="36" fitHeight="36">
                        <Image url="@/icons/event-icon.png" />
                        <!-- Fallback s'il n'y a pas d'image -->
                        <effect>
                            <ColorAdjust brightness="-0.1" contrast="0.2" hue="0.05" saturation="0.2" />
                        </effect>
                    </ImageView>
                    <Label text="Découvrez nos événements" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #3498DB;"/>
                </HBox>
                <Label text="Trouvez l'événement qui vous correspond" style="-fx-font-size: 14px; -fx-text-fill: #7F8C8D;"/>
            </VBox>
        </HBox>


        <!-- Scrolling Container pour les événements -->
        <ScrollPane fitToWidth="true" style="-fx-background: transparent; -fx-background-color: transparent;" VBox.vgrow="ALWAYS">
            <content>
                <FlowPane fx:id="eventFlowPane"
                          vgap="25" hgap="25"
                          alignment="CENTER"
                          style="-fx-padding: 20; -fx-background-color: transparent;"
                          prefWidth="800">
                    <!-- Les événements seront générés dynamiquement, avec 4 par ligne -->
                </FlowPane>
            </content>
        </ScrollPane>

        <!-- Indicateur de chargement (centré sur toute la vue) -->
        <StackPane fx:id="loadingIndicator" visible="false"
                   AnchorPane.topAnchor="0.0" AnchorPane.bottomAnchor="0.0"
                   AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
                   style="-fx-background-color: rgba(255,255,255,0.8);">
                <StackPane maxWidth="80" maxHeight="80" style="-fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.2), 10, 0, 0, 3);">
                    <padding>
                        <Insets top="15" right="15" bottom="15" left="15" />
                    </padding>
                    <ProgressIndicator style="-fx-progress-color: #3498DB;"/>
                </StackPane>
                <ProgressIndicator style="-fx-progress-color: #3498DB;"/>
        </StackPane>

        <!-- Pied de page avec info de total -->
        <HBox styleClass="footer-container" alignment="CENTER" style="-fx-background-color: #FFFFFF; -fx-padding: 12px; -fx-border-width: 1 0 0 0; -fx-border-color: #EEEEEE;">
            <Label fx:id="totalEventsLabel" text="Total: 42 événements" style="-fx-text-fill: #7F8C8D;"/>
        </HBox>
    </VBox>
</AnchorPane>