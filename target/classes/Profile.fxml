<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane style="-fx-background-color: #F5F5DC;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.ProfileController">
    <!-- ScrollPane pour permettre le défilement si la fenêtre est trop petite -->
    <ScrollPane fx:id="scrollPane" fitToWidth="true" style="-fx-background-color: transparent; -fx-background: transparent;" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <content>
            <VBox spacing="0">
                <!-- Header compact avec bouton retour -->
                <HBox alignment="CENTER_LEFT" style="-fx-background-color: #E8E4C9; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 5, 0, 0, 2);">
                    <padding>
                        <Insets bottom="8" left="15" right="15" top="8" />
                    </padding>
                    <Button onAction="#annulerAction" style="-fx-background-color: transparent; -fx-border-color: transparent; -fx-cursor: hand;">
                        <graphic>
                            <ImageView fitHeight="20" fitWidth="20" preserveRatio="true">
                                <image>
                                    <Image url="@image/9068678.png" />
                                </image>
                            </ImageView>
                        </graphic>
                    </Button>
                    <Label style="-fx-text-fill: #5D4037; -fx-font-weight: bold;" text="Mon Profil">
                        <font>
                            <Font name="Segoe UI Semibold" size="16" />
                        </font>
                        <HBox.margin>
                            <Insets left="10" />
                        </HBox.margin>
                    </Label>
                </HBox>

                <!-- Conteneur principal avec espacement réduit -->
                <VBox spacing="12" style="-fx-padding: 15;">
                    <!-- En-tête de profil compact avec avatar plus petit -->
                    <HBox alignment="CENTER" style="-fx-background-color: #EAE7D6; -fx-background-radius: 8; -fx-padding: 12;">
                        <!-- Avatar de l'utilisateur -->
                        <ImageView fitHeight="50.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@image/user_avatar.jpg" />
                            </image>
                            <HBox.margin>
                                <Insets right="15.0" />
                            </HBox.margin>
                        </ImageView>

                        <!-- Informations principales -->
                        <VBox alignment="CENTER_LEFT" HBox.hgrow="ALWAYS">
                            <Label fx:id="fullNameLabel" style="-fx-font-size: 16; -fx-font-weight: bold; -fx-text-fill: #5D4037;" text="sassi amine" />
                            <Label fx:id="roleLabel" style="-fx-font-size: 12; -fx-text-fill: #8D6E63;" text="membre" />
                            <Label fx:id="derniereConnexionLabel" style="-fx-text-fill: #9E9E9E; -fx-font-size: 10;" text="Dernière connexion: 03/05/2025 à 19:31" />
                        </VBox>
                    </HBox>

                    <!-- Section des informations personnelles avec espacement réduit -->
                    <VBox style="-fx-background-color: #FFFBEB; -fx-background-radius: 8; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.05), 4, 0, 0, 2); -fx-padding: 12;">
                        <HBox alignment="CENTER_LEFT">
                            <ImageView fitHeight="16" fitWidth="16" preserveRatio="true">
                                <image>
                                    <Image url="@image/user_info.png" />
                                </image>
                                <HBox.margin>
                                    <Insets right="8" />
                                </HBox.margin>
                            </ImageView>
                            <Label style="-fx-text-fill: #7C6D52; -fx-font-size: 12; -fx-font-weight: bold;" text="INFORMATIONS PERSONNELLES" />
                        </HBox>

                        <!-- Grille d'informations avec espacement optimisé -->
                        <GridPane hgap="12" vgap="8">
                            <padding>
                                <Insets top="10" />
                            </padding>
                            <columnConstraints>
                                <ColumnConstraints percentWidth="50" />
                                <ColumnConstraints percentWidth="50" />
                            </columnConstraints>

                            <!-- Nom -->
                            <VBox GridPane.columnIndex="0" GridPane.rowIndex="0">
                                <Label style="-fx-text-fill: #7C6D52; -fx-font-size: 11; -fx-font-weight: bold;" text="Nom" />
                                <TextField fx:id="NomDetailTextField" editable="false" style="-fx-background-color: #FAF6E9; -fx-background-radius: 4; -fx-padding: 6; -fx-font-size: 12; -fx-border-color: #D7CCA1; -fx-border-radius: 4;" text="amine" />
                            </VBox>

                            <!-- Prénom -->
                            <VBox GridPane.columnIndex="1" GridPane.rowIndex="0">
                                <Label style="-fx-text-fill: #7C6D52; -fx-font-size: 11; -fx-font-weight: bold;" text="Prénom" />
                                <TextField fx:id="PrenomDetailTextField" editable="false" style="-fx-background-color: #FAF6E9; -fx-background-radius: 4; -fx-padding: 6; -fx-font-size: 12; -fx-border-color: #D7CCA1; -fx-border-radius: 4;" text="sassi" />
                            </VBox>

                            <!-- Genre -->
                            <VBox GridPane.columnIndex="0" GridPane.rowIndex="1">
                                <Label style="-fx-text-fill: #7C6D52; -fx-font-size: 11; -fx-font-weight: bold;" text="Genre" />
                                <TextField fx:id="GenreDetailTextField" editable="false" style="-fx-background-color: #FAF6E9; -fx-background-radius: 4; -fx-padding: 6; -fx-font-size: 12; -fx-border-color: #D7CCA1; -fx-border-radius: 4;" text="Femme" />
                            </VBox>

                            <!-- Rôle -->
                            <VBox GridPane.columnIndex="1" GridPane.rowIndex="1">
                                <Label style="-fx-text-fill: #7C6D52; -fx-font-size: 11; -fx-font-weight: bold;" text="Rôle" />
                                <TextField fx:id="RoleDetailTextField" editable="false" style="-fx-background-color: #FAF6E9; -fx-background-radius: 4; -fx-padding: 6; -fx-font-size: 12; -fx-border-color: #D7CCA1; -fx-border-radius: 4;" text="membre" />
                            </VBox>
                            <rowConstraints>
                                <RowConstraints />
                                <RowConstraints />
                            </rowConstraints>
                        </GridPane>

                        <!-- Message d'erreur pour la validation avec taille réduite -->
                        <Label fx:id="erreurMessageLabel" style="-fx-text-fill: #C62828; -fx-font-size: 11;" text="Message d'erreur" visible="false">
                            <VBox.margin>
                                <Insets top="5" />
                            </VBox.margin>
                        </Label>
                    </VBox>

                    <!-- Section des informations du compte avec espacement réduit -->
                    <VBox style="-fx-background-color: #FFFBEB; -fx-background-radius: 8; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.05), 4, 0, 0, 2); -fx-padding: 12;">
                        <HBox alignment="CENTER_LEFT">
                            <ImageView fitHeight="16" fitWidth="16" preserveRatio="true">
                                <image>
                                    <Image url="@image/account_info.webp" />
                                </image>
                                <HBox.margin>
                                    <Insets right="8" />
                                </HBox.margin>
                            </ImageView>
                            <Label style="-fx-text-fill: #7C6D52; -fx-font-size: 12; -fx-font-weight: bold;" text="INFORMATIONS DU COMPTE" />
                        </HBox>

                        <!-- Grille d'informations du compte avec espacement optimisé -->
                        <GridPane hgap="12" vgap="8">
                            <padding>
                                <Insets top="10" />
                            </padding>
                            <columnConstraints>
                                <ColumnConstraints percentWidth="50" />
                                <ColumnConstraints percentWidth="50" />
                            </columnConstraints>

                            <!-- Email -->
                            <VBox GridPane.columnIndex="0" GridPane.rowIndex="0">
                                <Label style="-fx-text-fill: #7C6D52; -fx-font-size: 11; -fx-font-weight: bold;" text="Email" />
                                <TextField fx:id="EmailDetailTextField" editable="false" style="-fx-background-color: #FAF6E9; -fx-background-radius: 4; -fx-padding: 6; -fx-font-size: 12; -fx-border-color: #D7CCA1; -fx-border-radius: 4;" text="tik20000tok@gmail.com" />
                            </VBox>

                            <!-- Mot de passe -->
                            <VBox GridPane.columnIndex="1" GridPane.rowIndex="0">
                                <Label style="-fx-text-fill: #7C6D52; -fx-font-size: 11; -fx-font-weight: bold;" text="Mot de passe" />
                                <HBox alignment="CENTER_LEFT" spacing="5">
                                    <TextField fx:id="PasswordDetailTextField" editable="false" style="-fx-background-color: #FAF6E9; -fx-background-radius: 4; -fx-padding: 6; -fx-font-size: 12; -fx-border-color: #D7CCA1; -fx-border-radius: 4;" text="••••••••" HBox.hgrow="ALWAYS" />
                                </HBox>
                            </VBox>
                            <rowConstraints>
                                <RowConstraints />
                            </rowConstraints>
                        </GridPane>

                        <!-- Bouton pour changer le mot de passe -->
                        <HBox alignment="CENTER_RIGHT">
                            <padding>
                                <Insets top="8" />
                            </padding>
                            <Button fx:id="changerMotDePasseBtn" onAction="#handleChangerMotDePasse" style="-fx-background-color: transparent; -fx-text-fill: #9C7A51; -fx-font-weight: bold; -fx-cursor: hand; -fx-font-size: 11;" text="Changer le mot de passe">
                                <graphic>
                                    <ImageView fitHeight="12" fitWidth="12" preserveRatio="true">
                                        <image>
                                            <Image url="@image/key_icon.png" />
                                        </image>
                                    </ImageView>
                                </graphic>
                            </Button>
                        </HBox>
                    </VBox>

                    <!-- Boutons d'action avec taille réduite -->
                    <HBox alignment="CENTER_RIGHT" spacing="8">
                        <Button fx:id="supprimerCompteBtn" onAction="#handleSupprimerCompte" style="-fx-background-color: #C62828; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 4; -fx-padding: 6 12; -fx-cursor: hand; -fx-font-size: 11; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 2, 0, 0, 1);" text="Supprimer mon compte">
                            <graphic>
                                <ImageView fitHeight="12" fitWidth="12" preserveRatio="true">
                                    <image>
                                        <Image url="@image/delete-icon.png" />
                                    </image>
                                </ImageView>
                            </graphic>
                        </Button>
                        <Button fx:id="exporterProfilBtn" onAction="#handleExporterProfil" style="-fx-background-color: #8D6E63; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 4; -fx-padding: 6 12; -fx-cursor: hand; -fx-font-size: 11; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 2, 0, 0, 1);" text="Exporter profil">
                            <graphic>
                                <ImageView fitHeight="12" fitWidth="12" preserveRatio="true">
                                    <image>
                                        <Image url="@image/export_icon.png" />
                                    </image>
                                </ImageView>
                            </graphic>
                        </Button>
                        <Button fx:id="modifierBtn" onAction="#handleModifier" style="-fx-background-color: #9C7A51; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 4; -fx-padding: 6 12; -fx-cursor: hand; -fx-font-size: 11; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 2, 0, 0, 1);" text="Modifier le profil">
                            <graphic>
                                <ImageView fitHeight="12" fitWidth="12" preserveRatio="true">
                                    <image>
                                        <Image url="@image/edit-icon.png" />
                                    </image>
                                </ImageView>
                            </graphic>
                        </Button>
                        <Button fx:id="sauvegarderBtn" onAction="#handleSauvegarder" style="-fx-background-color: #7D8C55; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 4; -fx-padding: 6 12; -fx-cursor: hand; -fx-font-size: 11; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 2, 0, 0, 1);" text="Enregistrer" visible="false">
                            <graphic>
                                <ImageView fitHeight="12" fitWidth="12" preserveRatio="true">
                                    <image>
                                        <Image url="@image/save_icon.png" />
                                    </image>
                                </ImageView>
                            </graphic>
                        </Button>
                    </HBox>
                </VBox>
            </VBox>
        </content>
    </ScrollPane>
</AnchorPane>